extends layout

block content

  each post in posts
      p #{post._id} #{post.author.name} : #{post.content}

  p #{(page-1)*10} #{ page*10 }
  
  if page-1 > 0 
    li.previous
        a(title='Prev', href='?page=#{page-1}') &larr; Prev
  if page*10 < total 
    li.next
        a(title='Next', href='?page=#{page+1}') Next  &rarr;

